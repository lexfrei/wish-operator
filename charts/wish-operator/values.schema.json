{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "wish-operator Helm Chart Values",
  "description": "Configuration values for the wish-operator Helm chart",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Number of replicas for the operator deployment"
    },
    "image": {
      "type": "object",
      "description": "Container image configuration",
      "properties": {
        "repository": {
          "type": "string",
          "default": "ghcr.io/lexfrei/wish-operator",
          "description": "Container image repository"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent",
          "description": "Image pull policy"
        },
        "tag": {
          "type": "string",
          "default": "",
          "description": "Image tag (defaults to appVersion if empty)"
        }
      },
      "additionalProperties": false
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the image pull secret"
          }
        },
        "required": ["name"]
      },
      "default": [],
      "description": "List of image pull secrets"
    },
    "nameOverride": {
      "type": "string",
      "default": "",
      "description": "Override the chart name"
    },
    "fullnameOverride": {
      "type": "string",
      "default": "",
      "description": "Override the full release name"
    },
    "serviceAccount": {
      "type": "object",
      "description": "Service account configuration",
      "properties": {
        "create": {
          "type": "boolean",
          "default": true,
          "description": "Create a service account"
        },
        "automount": {
          "type": "boolean",
          "default": true,
          "description": "Automount service account token"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "Annotations for the service account"
        },
        "name": {
          "type": "string",
          "default": "",
          "description": "Service account name (generated if empty)"
        }
      },
      "additionalProperties": false
    },
    "podAnnotations": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Annotations to add to pods"
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Labels to add to pods"
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean",
          "default": true,
          "description": "Run container as non-root user"
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Localhost", "Unconfined"],
              "default": "RuntimeDefault",
              "description": "Seccomp profile type"
            }
          }
        }
      },
      "additionalProperties": true
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context",
      "properties": {
        "allowPrivilegeEscalation": {
          "type": "boolean",
          "default": false,
          "description": "Allow privilege escalation"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["ALL", "NET_RAW", "SYS_ADMIN", "NET_ADMIN"]
              },
              "default": ["ALL"],
              "description": "Capabilities to drop"
            }
          }
        },
        "readOnlyRootFilesystem": {
          "type": "boolean",
          "default": true,
          "description": "Use read-only root filesystem"
        }
      },
      "additionalProperties": true
    },
    "service": {
      "type": "object",
      "description": "Service configuration",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP",
          "description": "Kubernetes service type"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8080,
          "description": "Service port"
        }
      },
      "additionalProperties": false
    },
    "resources": {
      "type": "object",
      "description": "Container resource requests and limits",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$",
              "default": "500m",
              "description": "CPU limit (e.g., '500m' or '1')"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Ki|Mi|Gi)?$",
              "default": "128Mi",
              "description": "Memory limit (e.g., '128Mi' or '1Gi')"
            }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$",
              "default": "10m",
              "description": "CPU request (e.g., '10m' or '0.1')"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Ki|Mi|Gi)?$",
              "default": "64Mi",
              "description": "Memory request (e.g., '64Mi')"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Node selector for pod scheduling"
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Toleration key"
          },
          "operator": {
            "type": "string",
            "enum": ["Exists", "Equal"],
            "description": "Toleration operator"
          },
          "value": {
            "type": "string",
            "description": "Toleration value"
          },
          "effect": {
            "type": "string",
            "enum": ["NoSchedule", "PreferNoSchedule", "NoExecute"],
            "description": "Toleration effect"
          },
          "tolerationSeconds": {
            "type": "integer",
            "minimum": 0,
            "description": "Toleration seconds for NoExecute effect"
          }
        }
      },
      "default": [],
      "description": "Tolerations for pod scheduling"
    },
    "affinity": {
      "type": "object",
      "description": "Affinity rules for pod scheduling",
      "properties": {
        "nodeAffinity": {
          "type": "object",
          "description": "Node affinity rules"
        },
        "podAffinity": {
          "type": "object",
          "description": "Pod affinity rules"
        },
        "podAntiAffinity": {
          "type": "object",
          "description": "Pod anti-affinity rules"
        }
      },
      "additionalProperties": false
    },
    "operator": {
      "type": "object",
      "description": "Operator-specific configuration",
      "properties": {
        "namespace": {
          "type": "string",
          "default": "default",
          "description": "Namespace to watch for Wish resources"
        },
        "rateLimit": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "default": 30,
          "description": "Rate limit (requests per minute per IP)"
        },
        "rateBurst": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 10,
          "description": "Rate limit burst size"
        },
        "leaderElection": {
          "type": "boolean",
          "default": false,
          "description": "Enable leader election for HA deployments"
        }
      },
      "additionalProperties": false
    },
    "httpRoute": {
      "type": "object",
      "description": "Gateway API HTTPRoute configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Create an HTTPRoute resource"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "Annotations to add to the HTTPRoute (e.g., for external-dns)"
        },
        "parentRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Gateway name"
              },
              "namespace": {
                "type": "string",
                "description": "Gateway namespace"
              },
              "sectionName": {
                "type": "string",
                "description": "Gateway listener name"
              }
            },
            "required": ["name"]
          },
          "default": [],
          "description": "Parent Gateway references"
        },
        "hostnames": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$"
          },
          "default": [],
          "description": "Hostnames for the HTTPRoute"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
